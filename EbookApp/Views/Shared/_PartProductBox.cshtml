@model IEnumerable<EbookApp.Models.Ebook>
@using EbookApp.Infrastructure

@foreach (var item in Model)
{
    <div class="box">

        <span class="discount"></span>
        <img src="@Url.ObrazkiSciezka(item.NazwaPlikuObrazka)" />
        <h3>@item.Title</h3>
        <div class="price"> PLN @item.CenaEbooka <span>  </span> </div>
        <div class="quantity">
            <span>Ilość : </span>
            <input type="number" min="1" max="1000" value="1">
            <span> </span>
        </div>
        <a href="@Url.Action("Szczegoly", "Ebook", new {id = item.Id})" class="btn">Details</a>
        <a href="@Url.Action("DodajDoKoszyka", "Koszyk", new {id = item.Id})" class="btn">Add to Cart</a>
    </div>
}
