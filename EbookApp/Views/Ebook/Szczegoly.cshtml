@model EbookApp.Models.Ebook

@using EbookApp.Infrastructure



<div class="small-container single-product">
    <div class="row">
        <div class="col-2">
            <img src="@Url.ObrazkiSciezka(Model.NazwaPlikuObrazka)" alt="" width="75%" id="ProductImg"/>
            @*<img src="~/Content/Project/images/img-1.jpg" alt="" width="50%" id="ProductImg">*@
            <div class="small-img-row">
            </div>
        </div>

        <div class="col-2">
            <h1> @Model.Title</h1>
            <h2> @Model.AutorEbooka</h2>
            <h4>PLN @Model.CenaEbooka</h4>
            <input type="number" value="1">
            <a href="@Url.Action("DodajDoKoszyka", "Koszyk", new {id = Model.Id})" class="btn1">Add to Cart</a>
            <h3>Details<i class="fa fa-indent"></i></h3>
            <br>
            <p>@Model.OpisEbooka</p>

        </div>

    </div>
</div>